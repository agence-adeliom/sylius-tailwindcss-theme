{% import '@SyliusShop/Common/Macro/sectionHeaders.html.twig' as headers %}

<section class="newsletter bg-neutral rounded-sm text-center p-32 max-sm:p-8">
    <div class="max-w-[800px] mx-auto">
        <h2 class="mb-8 heading-4">{{ 'sylius.homepage.newsletter'|trans }}</h2>
        <p class="max-sm:text-sm text-lg text-base-content mb-8">{{ 'sylius.homepage.newsletter_description'|trans|raw }}</p>

        <form class="flex max-sm:flex-wrap gap-3">
            <div class="form-control w-full">
                <div class="input input-bordered flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4 opacity-70"><path d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z" /><path d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z" /></svg>
                    <input type="text" placeholder="{{ 'sylius.ui.email'|trans }}">
                </div>
            </div>

            <button class="btn btn-outline">
                {{ 'sylius.homepage.subscribe'|trans }}
            </button>
        </form>
    </div>
</section>

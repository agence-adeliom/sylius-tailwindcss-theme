{% macro default(header, icon, subheader) %}
    <h1 class="heading-4 my-8">
        {% if icon is not empty %}
            {{ icon }}
        {% endif %}

        {{ header }}
    </h1>

    {% if subheader is not empty %}
        <p class="text-body-secondary mb-4">{{ subheader|raw }}</p>
    {% endif %}
{% endmacro %}

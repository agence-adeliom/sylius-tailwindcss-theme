{% macro default(message, icon, type, header) %}
	<div class="alert alert-{{ type|default('success') }} text-{{ type|default('success') }}-content my-4 relative z-10" {{ sylius_test_html_attribute('flash-message', type) }}>
		<span class="fa-2x">
			{{ icon }}
		</span>
		<div>
			<strong class="d-block">
				{{ header|default(type)|trans }}
			</strong>
			<p class="mb-0">
				{{ message|trans }}
			</p>
		</div>
	</div>
{% endmacro %}

{% macro info(message) %}
	{% import _self as messages %}
	{% import "@SyliusShop/Common/Macro/icons.html.twig" as icons %}

	{{ messages.default(message, icons.info(), 'info', 'sylius.ui.info') }}
{% endmacro %}


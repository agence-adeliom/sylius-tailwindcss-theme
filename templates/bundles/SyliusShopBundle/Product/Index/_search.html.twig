<div class="mb-5 w-full text-center">
	<form method="get" action="{{ path('sylius_shop_product_index', {'slug': app.request.attributes.get('slug')}) }}" class="loadable">
		<div class="wrapper-12">
			<div class="col-span-full lg:col-start-3 lg:col-span-8 input-group bg-light rounded flex gap-2 mt-2 md:mt-8 mb-4 md:mb-10">
				{% for filter in products.definition.enabledFilters %}
					{{ sylius_grid_render_filter(products, filter) }}
				{% endfor %}

				<button type="submit" class="btn" {{ sylius_test_html_attribute('search') }}>
					<i class="fa-solid fa-search"></i>
					<span class="sr-only">{{ 'sylius.ui.search'|trans }}</span>
				</button>

				<a href="{{ path('sylius_shop_product_index', {'slug': app.request.attributes.get('slug')}) }}" class="btn d-inline-grid place-content-center" {{ sylius_test_html_attribute('clear') }}>
					<i class="fa-solid fa-times"></i>
					<span class="sr-only">{{ 'sylius.ui.clear'|trans }}</span>
				</a>
			</div>
		</div>
	</form>

</div>

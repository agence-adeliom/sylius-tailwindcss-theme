{% set enabled = order.shipments|length %}

<div class="flex items-center justify-between mt-4 md:mt-8 flex-wrap gap-4">
    <a href="{{ path('sylius_shop_checkout_address') }}" class="btn btn-light">
        <i class="fa-solid fa-arrow-left"></i>
        {{ 'sylius.ui.change_address'|trans }}
    </a>
    <button type="submit" class="btn btn-primary{% if not enabled %} disabled{% endif %}" {{ sylius_test_html_attribute('next-step') }}>
        <i class="fa-solid fa-arrow-right"></i>

        {{ 'sylius.ui.next'|trans }}
    </button>
</div>
